mixin link(url)
  a(href=url target="_blank" rel="noopener noreferrer")
    block

doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title Theremin Demo
  body
    div.container
      h1.display-4 Theremin Demo
        +link("https://github.com/higuma/theremin-demo")
          img.mt-4.float-right(src="img/GitHub-Mark-32px.png" alt="GitHub logo 32x32")
      div.btn-toolbar(role="toolbar" aria-label="Button toolbar")
        div.btn-group.my-1(role="group" aria-label="Start-Stop")
          button.btn.btn-secondary#start-button Start
        div.btn-group.ml-4.my-1#range-buttons(role="group" aria-label="Note range")
          button.btn.btn-sm.btn-light(role="button" name="1oct") 1Oct
          button.btn.btn-sm.btn-light(role="button" name="2oct") 2Oct
          button.btn.btn-sm.btn-warning(role="button" name="3oct") 3Oct
          button.btn.btn-sm.btn-light(role="button" name="4oct") 4Oct
          button.btn.btn-sm.btn-light(role="button" name="5oct") 5Oct
        div.btn-group.ml-2.my-1#offset-buttons(role="group" aria-label="Note offset")
          button.btn.btn-sm.btn-light(role="button" name="c2") C2-C5
          button.btn.btn-sm.btn-light(role="button" name="c3") C3-C6
          button.btn.btn-sm.btn-warning(role="button" name="c4") C4-C7
          button.btn.btn-sm.btn-light(role="button" name="c5") C5-C8
          button.btn.btn-sm.btn-light(role="button" name="c6") C6-C9
      canvas.img-fluid.mt-3#instrument(width="1140" height="320") This page requires HTML canvas
